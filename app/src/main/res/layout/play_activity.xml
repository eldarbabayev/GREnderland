<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/theme_light"
        android:id="@+id/MainWord"
        android:layout_marginTop="65dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textSize="52sp"
        />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/ToolbarWelcome"
        android:background="@color/theme_primary"
        android:titleTextColor="@color/white"
        app:titleTextAppearance="@style/ToolbarTextAppearance"
        />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:id="@+id/FirstChoice"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/MainWord"
        android:layout_marginBottom="-10dp"
        android:layout_marginTop="-3dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginRight="-5dp"
        android:onClick="firstButton"
        android:textSize="15sp"

        />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:id="@+id/SecondChoice"
        android:layout_below="@+id/FirstChoice"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="-10dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginRight="-5dp"
        android:onClick="secondButton"
        android:textSize="15sp"



        />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:id="@+id/ThirdChoice"
        android:layout_below="@+id/SecondChoice"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="-3dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginRight="-5dp"
        android:onClick="thirdButton"
        android:textSize="15sp"


        />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:id="@+id/FourthChoice"
        android:layout_below="@+id/MainWord"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-10dp"
        android:layout_marginTop="-3dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginRight="-3dp"
        android:onClick="fourthButton"
        android:textSize="15sp"


        />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:id="@+id/FifthChoice"
        android:layout_below="@+id/FourthChoice"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-10dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginRight="-3dp"
        android:onClick="fifthButton"
        android:textSize="15sp"


        />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:id="@+id/SixthChoice"
        android:layout_below="@+id/FifthChoice"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-3dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginRight="-3dp"
        android:textSize="15sp"
        android:onClick="sixthButton"
        />



</RelativeLayout>
